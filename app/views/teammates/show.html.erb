<div class="page-header">
  <h1><%=@teammate.name+' '+@teammate.last_name%></h1>
</div>
<div class="container">
  <div class="row">
    <div class="span4">
      <table>
        <tr>
          <td>Contracting company</td>
          <td><%= @teammate.contracting_company %></td>
        </tr>
        <tr>
          <td>Subcontracting company</td>
          <td><%= @teammate.subcontracting_company%></td>
        </tr>
      </table>    
    </div>
    <div class="span8">
      <p>Assignments list</p>
      <%=render 'shared/teammate_assignments'%>
    </div>
  </div>
  <div class="row">
    <div class="span4">
      <%= link_to 'Edit', edit_teammate_path(@teammate), class: "btn btn-large" %>
    </div>
    <div class="span8">
      <%= link_to 'Change assignments', teammate_assignments_path(@teammate), class: "btn btn-large" %>
    </div>
  </div>
</div>