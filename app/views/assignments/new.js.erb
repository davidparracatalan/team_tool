$('#assignment_partial').show();
$('#assignment_partial').html('<%= escape_javascript(render :partial => "new_assignment_form" )%>');
$('div.container div>a').hide();
$('input.datepicker').datepicker({"autoclose": true, "format": 'dd/mm/yyyy', "weekStart": 1});
$('#assign_cancel').click(function(e){
      e.preventDefault();
      $('#assignment_partial').hide();
      $('div.container div>a').show();
    }  
  );