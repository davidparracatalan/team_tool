<%if @assignment && @assignment.errors.any? %>
  <div id="error_explanation">
      <h2><%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>
      <ul>
        <% @assignment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
  </div>
<%end%>
<div>
  <%if @available_subteams.empty?%>
    <div class="page-header"> 
      <h3>Sorry, you can't assign <%=@teammate.name%> to any subteam because there's no one available now</h1>
    </div>
  <%else%>
    <div class="page-header"> 
      <h3>Please, select the subteam and set the dates</h3>
    </div>
    <%= form_for [:teammate, @assignment] do |f|%>
      <div>
        <%= f.hidden_field :teammate_id, :value => @teammate.id %>
        <%= f.label :subteam %>
        <%= f.collection_select(:subteam_id, @available_subteams, :id, :name) %>
        <%= f.label :start_date%>
        <%= f.text_field :start_date, class: "datepicker"%>
        <%= f.label :foreseen_end_date%>
        <%= f.text_field :foreseen_end_date, class: "datepicker"%>
      </div>
      <div>
        <%= f.submit "Assign", class: "btn"%>
      </div>
    <%end%>
  <%end%>
</div>