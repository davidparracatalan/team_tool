<%= form_for(@subteam) do |f| %>
  <% if @subteam.errors.any? %>
    <div id="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <h2><%= pluralize(@subteam.errors.count, "error") %> prohibited this subteam from being saved:</h2>

      <ul>
      <% @subteam.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :start_date %>
    <%= f.text_field :start_date, class: "datepicker", value: "#{dateUnlessEmpty @subteam.start_date}" %>
    <%= f.label :foreseen_end_date %>
    <%= f.text_field :foreseen_end_date, 
                     class: "datepicker", 
                     value: "#{dateUnlessEmpty @subteam.foreseen_end_date}"%>
    <%= f.label :end_date %>
    <%= f.text_field :end_date, class: "datepicker", value: "#{dateUnlessEmpty @subteam.end_date}" %>
  </div>
  <div>
    <%= f.submit "Create", class: "btn" %>
  </div>
<% end %>