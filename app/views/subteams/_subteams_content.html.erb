<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Start date</th>
    <th>Foreseen end date</th>
    <th>End date</th>
    <th></th>
  </tr>

<% @subteams.each do |subteam| %>
  <tr>
    <td><%= link_to "#{truncate subteam.name}", subteam %></td>
    <td><%= dateUnlessEmpty subteam.start_date%></td>
    <td><%= dateUnlessEmpty subteam.foreseen_end_date%></td>
    <td><%=dateUnlessEmpty subteam.end_date%></td>
    <td>
      <ul class="nav nav-pills">
        <li><%= link_to 'Edit', edit_subteam_path(subteam) %></li>
        <li><%= link_to 'Delete', subteam, method: :delete, data: { confirm: 'Are you sure?' } %></li>
      </ul>
    </td>
  </tr>
<% end %>
</table>
<%= link_to 'New Subteam', new_subteam_path, class: "btn" %>